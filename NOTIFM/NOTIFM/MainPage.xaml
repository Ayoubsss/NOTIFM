<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NOTIFM.MainPage">

    <Grid BackgroundColor="#34C0FF">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="1.4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackLayout Padding="40" BackgroundColor="#34C0FF" Grid.Row="0">
            <Image x:Name="resourceImage" Aspect="AspectFit" />
        </StackLayout>

        <AbsoluteLayout VerticalOptions="FillAndExpand" Grid.Row="1">
            <BoxView BackgroundColor="White" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,1,1,0.5"/>
            <Frame HasShadow="False" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0,0,1,1" CornerRadius="50" Padding="0" >
                <StackLayout BackgroundColor="White" >
                    <Label Padding="25" HorizontalOptions="CenterAndExpand" FontFamily="UrbanistFontBold" FontSize="20" Text="Register"></Label>
                </StackLayout>
            </Frame>
            
        </AbsoluteLayout>



    </Grid>
    

</ContentPage>
